# Backend Environment Configuration
# Copy this file to .env and update with your values

# Database - SQLite for development (no setup needed)
DATABASE_URL=sqlite:///./taskflow.db
# For PostgreSQL production: postgresql://user:password@localhost/dbname

# Security - IMPORTANT: Change SECRET_KEY in production!
SECRET_KEY=your-secret-key-here-use-openssl-rand-hex-32-to-generate
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Ollama Configuration (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:latest
TEMPERATURE=0.7
MAX_TOKENS=2000

# CORS - Frontend URLs
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (Optional - for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@taskflow.com

# Redis (Optional - for Celery background tasks)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Settings
APP_NAME=TaskFlow Agent
APP_VERSION=1.0.0
DEBUG=True
API_V1_STR=/api/v1

# AI/ML Settings
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.pdf,.txt,.md,.markdown

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
